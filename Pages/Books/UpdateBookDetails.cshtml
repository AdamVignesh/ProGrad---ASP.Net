@page
@model WebApplication1.Pages.Books.UpdateBookDetailsModel
@{
}

@if (Model.message.Length > 0)
{
    <div id="error">
        <br><div class="alert-warning">

            @Model.message
        </div><br />
        <button type="button" class="btn-close" data-dismiss="alert" onclick="
            document.getElementById('error').remove();
               ">
        </button>
    </div>
}




<form method="post">
    <input type="hidden" name="BookCode" value="@Model.b.BookCode" />
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label"> Book Title </label>
        <div class="col-sm-4">
            <input type="text" class="form-control" value="@Model.b.BookTitle" required name="BookTitle" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label"> Author </label>
        <div class="col-sm-4">
            <input type="text" class="form-control" value="@Model.b.Author" required name="Author" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label"> Category </label>
        <div class="col-sm-4">
            <input type="text" class="form-control" value="@Model.b.Category" required name="Category" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Publication </label>
        <div class="col-sm-4">
            <input type="text" class="form-control" value="@Model.b.Publication" required name="Publication" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label"> Publication Date </label>
        <div class="col-sm-4">
            <input type="date" class="form-control" value="@Model.b.PublishDate.ToString("yyyy-MM-dd")" required name="PublishDate" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label"> Book Edition </label>
        <div class="col-sm-4">
            <input type="number" class="form-control" value="@Model.b.BookEdition" required name="BookEdition" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label"> Price </label>
        <div class="col-sm-4">
            <input type="number" class="form-control" value="@Model.b.Price" required name="Price" />
        </div>
    </div>
    <div>
        <button type="submit" class="btn-primary"> Submit </button>
    </div>
</form>